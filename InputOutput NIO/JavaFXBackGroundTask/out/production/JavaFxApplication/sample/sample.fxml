<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Get Names" onAction="#buttonPressed"
            GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <ListView fx:id="nameListView" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <ProgressBar fx:id="progressBar" GridPane.columnIndex="0" GridPane.rowIndex="2" visible="false"/>

</GridPane>